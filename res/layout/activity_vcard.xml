<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/ll_vcard"
        layout="@layout/activity_top_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dip"
        android:background="#ebebeb"
        android:paddingBottom="20dip"
        android:paddingRight="20dip"
        android:paddingTop="20dip" >

        <ImageView
            android:id="@+id/iv_vcard_icon"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/touxiang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:layout_toRightOf="@id/iv_vcard_icon"
            android:text="华为为"
            android:textColor="#000000"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="#ffffff"
        android:paddingLeft="15dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/tv_vcard_zhiwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="职务"
            android:textColor="#848483"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dip"
            android:layout_toRightOf="@id/tv_vcard_zhiwu"
            android:text="高级项目经理"
            android:textColor="#848483"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="15dip"
        android:background="#e9e9e9" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="#ffffff"
        android:paddingLeft="15dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/tv_vcard_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机"
            android:textColor="#848483"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_vcard_telphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dip"
            android:layout_toRightOf="@id/tv_vcard_tel"
            android:text="13104567968"
            android:textColor="#848483"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_vcard_tel_call"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/call"
            android:ellipsize="end"
           />

        <ImageButton
            android:id="@+id/btn_vcard_sms"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dip"
            android:layout_alignBottom="@id/btn_vcard_tel_call"
            android:layout_alignTop="@id/btn_vcard_tel_call"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_vcard_tel_call"
            android:background="@drawable/sms"
            android:ellipsize="end" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="15dip"
        android:background="#e9e9e9" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="#ffffff"
        android:paddingLeft="15dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/tv_vcard_hometel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="固定电话"
            android:textColor="#848483"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_vcard_hometelphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dip"
            android:layout_toRightOf="@id/tv_vcard_hometel"
            android:text="010-56886888"
            android:textColor="#848483"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btn_vcard_guding_call"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/call"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="15dip"
        android:background="#e9e9e9" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="#ffffff"
        android:paddingLeft="15dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/tv_vcard_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="邮箱"
            android:textColor="#848483"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dip"
            android:layout_toRightOf="@id/tv_vcard_email"
            android:text="name@mail.taiji.com.cn"
            android:textColor="#848483"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="15dip"
        android:background="#e9e9e9" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="#ffffff"
        android:paddingLeft="15dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/tv_vcard_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="所在部门"
            android:textColor="#848483"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dip"
            android:layout_toRightOf="@id/tv_vcard_email"
            android:text="平台产品创新中心"
            android:textColor="#848483"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="15dip"
        android:background="#e9e9e9" >
    </LinearLayout>

</LinearLayout>